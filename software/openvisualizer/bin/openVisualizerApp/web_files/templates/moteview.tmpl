	                                <div class="tab-pane fade" id="schedule">
	                                    <div class="row">
	                                        <div class="col-lg-12">
	                                            <div class="panel-body">
	                                                <h5>Slot Schedule</h5>
	                                                <div id="tab-slot-sched" class="table-responsive"></div>
	                                                <br>
	                                                <h5>Packet Queue</h5>
	                                                <div id="tab-pack-queue" class="table-responsive"></div>
	                                            </div>
	                                        </div>
	                                    </div>
